{
  // 指定枪械弹药，此处我们使用默认枪包中的 7.62x39mm 步枪弹。
  "ammo": "tacz:9mm",
  // 弹容
  "ammo_amount": 1,
  // 枪栓类型。此处我们先按照 ak47 的类型填入 closed_bolt，以后再进行详细解释。
  "bolt": "open_bolt",
  // 每分钟射出弹药量，最大不应超过 1200
  "rpm": 150,
  // 子弹实体属性
  "script": "cib:batons_logic",
  "script_param": {
    "power_open": 1.5,
    "power_close": 1.4,
    "power_feed": 1,
    "heavy_delay": 12,
    "shoot_delay": 0.3
  },
  "bullet": {
     "extra_damage": {
      // 护甲穿透率，默认为 0，也就是没有穿甲伤害
      "armor_ignore": 0.5,
      // 爆头伤害 x1.5
      "head_shot_multiplier": 1.5,
      // 距离-伤害分段常函数
      "damage_adjust": [
        // 每一段区间的伤害数值，Distance指的是区间终点距离
        {"distance": 60, "damage": 5},
        {"distance": 90, "damage": 5},
        {"distance": 120, "damage": 5},
        {"distance": 150, "damage": 5},
        // 如果你忘记写这个无穷，那么超过上述距离，就认为是 0
      {"distance": "infinite", "damage": 5}
    ]
    },
    // 寿命，单位秒
    "life": 0.18,
    // 伤害
    "damage": 5,
    // 速度 m/s
    "speed": 15,
    // 重力
    "gravity": 0,
    // 击退效果
    "knockback": 0.1,
    // 飞行阻力
    "friction": 0.01,
    // 是否点燃目标
    "ignite": false,
    "bullet_amount": 12,
    // 穿透实体的最大数量
    "pierce": 99
    // 爆炸参数，用于 rpg 等爆炸性武器，如果没有填写，则弹头不会爆炸
    //"explosion": {
    //  "radius": 5
    //}
  },
  // 换弹参数
  "reload": {
    // 此处先填入 magazine，详细含义在以后解释。
    "type": "magazine",
    // 弹匣供弹完成时间，到达此时间点，服务端就更新枪内子弹数量
    // 通常对应着动画当中弹匣插入的瞬间。
    "feed": {
      // 空仓换弹
      "empty": 1.3,
      // 战术换弹
      "tactical": 1.2
    },
    // 弹匣供弹总时长（秒），到达此时间点，枪械才可以进行开火、检视等行为。
    // 通常对应着动画当中枪械回到原位的瞬间。
    "cooldown": {
      // 空仓换弹
      "empty": 1.5,
      // 战术换弹
      "tactical": 1.4
    }
  },
  // 枪械抬起的动作时长，单位秒。
  "draw_time": 0.5,
  // 收枪的动作时长，单位秒。
  "put_away_time": 0.3,
  // 瞄准时长，单位秒。
  "aim_time": 0.1,
  "weight": 0,
  // 疾跑状态切换时长，单位秒。
  "sprint_time": 0,
  // 开火模式
  "fire_mode": [
    // 全自动
    "auto",
    // 半自动
    "semi"
  ],
  // 后坐力，pitch 和yaw 分别至少需要两个关键帧
  "recoil": {
    "pitch": [
      // time 表示关键帧在时间轴上的位置，value 表示随机取值的取值范围。
      {"time": 0, "value": [1, 1]},
      {"time": 0.2, "value": [-1, -1]},
      {"time": 0.4, "value": [-0.175, -0.175]},
      {"time": 0.5, "value": [0, 0]}
    ],
    "yaw": [
      {"time": 0, "value": [-0.35, -0.15]},
      {"time": 0.25, "value": [-0.35, -0.15]},
      {"time": 0.45, "value": [0, 0]}
    ]
  },
  // 不准确度
  "hurt_bob_tweak_multiplier": 0.05,
  "inaccuracy": {

    // 站立射击散布
    "stand": 1,
    // 移动射击散布
    "move": 1,
    // 潜行射击散布
    "sneak": 1,
    // 趴下射击散布
    "lie": 1,
    // 瞄准射击时散布
    "aim": 1
  },
  "extended_mag_ammo_amount": [
    12,
    18,
    24
  ],
      // 开放的配件槽。未指定的槽位默认关闭。全部配件槽类型有:
  // scope, stock, muzzle, grip, laser, extended_mag
  "allow_attachment_types": [
  ]
}